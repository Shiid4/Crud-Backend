<%- include('layout/header')%>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Add User</h2>
            <form action="/add" method="POST" id="add-form" enctype="multipart/form-data">
                <div class="form-group mb-10">
                    <label for="firstName">Name</label>
                    <input type="text" class="form-control from-control-lg"  name="name" placeholder="Enter Name" required>
                </div>
                
                <div class="form-group mb-3">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Enter Email" required>
                </div>
                
                <div class="mb-3">
                    <label for="phone">Phone</label>
                    <input type="tel" class="form-control form-control-lg" placeholder="Enter phone" id="password" name="phone" required>
                </div>
                
                <div class="mb-3">
                    <label for="role"> Select Image</label>
                    <input type="file" class="form-control form-control-lg" name="image" required>
                </div>
                
                <div class="mb-3 d-grid">
                    <input type="submit" name="submit" value="Add User" class="btn btn-primary btn-lg">
                </div>
            </form>
        </div>
    </div>
</div>


<%- include('layout/footer')%>

